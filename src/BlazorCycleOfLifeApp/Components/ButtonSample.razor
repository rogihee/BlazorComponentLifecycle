
<div>
    @if (Condition)
    {
        <text>Count is: @Count: @Text</text>
    }
    else
    {
        <text>Count disabled</text>
    }
</div>

@code {

    [Parameter] public int Count { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public bool Condition { get; set; }
}
